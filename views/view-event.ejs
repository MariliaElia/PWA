<!DOCTYPE html>
<html lang="en">

<head>
    <script src="/socket.io/socket.io.js"></script>
    <script src="../javascripts/comment.js"></script>
    <% include templates/head %>
</head>

<!-- displays stories for clicked event -->
<body>
    <% include templates/header %>

    <div class="story-content ">
        <h3 class="title"><a href="/create-story/<%=eventID%>" onClick="return userState();"><img class="story-icon" src="/stylesheets/icons/plus.png"></a><%= eventTitle %></h3>
        <br>

        <div class="list-group list-group-item stories" id="stories">
            <%for (var i=stories.length-1; i>= 0; i--) {%>
                <div  class='list-group stories'>
                    <p>Description: <%=stories[i].storyDescription%></p>
                    <img src='<%= stories[i].storyImage%>' id='testImg'>
                    <br>
                    <br>
                    <div class="comment">
                        <div id="comments"></div>
                        <form action="" onsubmit="return sendComment()">
                            <input id="comment" type="text" class="form-group rounded usercomment" placeholder="Comment..." aria-label="Comment..." aria-describedby="basic-addon2">
                            <button class="btn btn-md"><img src="/stylesheets/icons/send-button.png" style="width:30px; height:30px" title="Send" alt="Send"></button>
                        </form>
                    </div>
                </div>
            <% }%>
        </div>

        <footer>
            <% include templates/footer %>
        </footer>
    </div>



</body>

</html>