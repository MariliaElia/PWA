<!DOCTYPE html>
<html lang="en">

<head>
    <% include templates/head %>
    <script src="/javascripts/datePicker.js"></script>
</head>

<body onload="initDB()">

    <% include templates/header %>

    <div class="form-container">
        <div class="panel panel-default">
            <h2 class="photofestheading">create event</h2>
            <form id="eventForm" onsubmit="onSubmit('/create-event', 'EVENT_OS')">
                <div class="form-group">
                    <label for="event-name">Event Name:</label>
                    <input type="text" name="event-name" class="form-control" id="formGroupExampleInput">
                </div>
                <div class="form-group">
                    <label for="event-description">Description:</label>
                    <!--<textarea class="form-control" rows="3"></textarea>-->
                    <input type="text" name="event-description"  class="form-control" id="formGroupExampleInput">
                </div>
                <div class="form-group"> <!-- Date input -->
                    <label class="control-label" for="date">Date</label>
                    <input class="form-control" id="date" name="date" placeholder="DD/MM/YYY" type="text"/>
                </div>
                <div class="form-group">
                    <label for="event-location">Location:</label>
                    <input type="text" name="event-location"  class="form-control" id="formGroupExampleInput">
                </div>
                <input type="submit" name="g" id="g" value="Submit" class="btn btn-info btn-md">
            </form>
        </div>
    </div>
    <div class="some padding" id="bestresults"></div>
<footer>
    <% include templates/footer %>
</footer>
    <br>
</body>

</html>