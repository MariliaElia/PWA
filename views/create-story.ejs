<!DOCTYPE html>
<html lang="en">

<head>
    <% include templates/head %>

</head>

<body onload="initDB()">

<% include templates/header %>

<div class="form-container">
    <div class="panel panel-default">
        <h2 class="photofestheading">create story</h2>

        <form id="story" onsubmit="onSubmit('/create-story', 'STORY_OS')">
            <div class="form-group fixed-event">
                <label for="event-name">For event: <a href="view-event"><%= eventID %></a></label>
                <input type="hidden" name="eventId" value="<%= eventID %>">
            </div>
            <div class="form-group">
                <label for="story-description">Description:</label>
                <!--<textarea class="form-control" rows="3"></textarea>-->
                <input type="text" name="event-description"  class="form-control" id="formGroupExampleInput">
            </div>
            <div class="form-group">
                <label for="event-location">Location:</label>
                <input type="text" name="event-location"  class="form-control" id="formGroupExampleInput">
            </div>
            <div class="form-group">
                <label for="event-location">Image:</label>
                <input type="file" name="image"  class="form-control" id="formGroupExampleInput">
            </div>
            <input type="submit" name="g" id="g" value="Submit" class="btn btn-info btn-md">
        </form>
    </div>
</div>
<footer>
    <% include templates/footer %>
</footer>
<br>


</body>

</html>