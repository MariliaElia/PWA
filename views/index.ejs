<script>
    $(document).ready(function(){
        var date_input=$('input[name="date"]'); //our date input has the name "date"
        var container=$('.bootstrap-iso form').length>0 ? $('.bootstrap-iso form').parent() : "body";
        var options={
            format: 'mm/dd/yyyy',
            container: container,
            todayHighlight: true,
            autoclose: true,
        };
        date_input.datepicker(options);
    })
</script>
<body >

<div class="header">
  <h1 id="title"><%= title %></h1>
  <p>Share your stories!</p>
</div>

<div class="search">
    <div class="md-form active-pink active-pink-2 mb-3 mt-0">
        <input class="form-control" type="text" placeholder="Search" aria-label="Keyword">
    </div>
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <p class="panel-title">
                    <a data-toggle="collapse" href="#collapse1">Advanced Search</a>
                </p>
            </div>
            <div id="collapse1" class="panel-collapse collapse">
                <div class="form-group"> <!-- Date input -->
                    <label class="control-label" for="date">Date</label>
                    <input class="form-control" id="date" name="date" placeholder="MM/DD/YYY" type="text"/>
                </div>
                <div class="panel-footer">
                    <button type="button" class="btn btn-md">Display Map</button>
                </div>
            </div>
        </div>
</div>
<button type="button" class="btn btn-info btn-md">Search</button>
</div>



    <div class="content">
